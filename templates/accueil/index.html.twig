{% extends 'base.html.twig' %}

{% block title %}Ninoucrea!
{% endblock %}

{% block body %}

	{% if app.user %}
		<div class="mb-3">
			Connecter avec
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Deconexion</a>
		</div>
	{% endif %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ðŸŽ€</h1>
	</div>


	<div
		class="container d-flex m-1">

		{# {{dump(produits) }} #}

		{% for value in produits %}
			<div class="card me-5 ms-5 mt-5" style="width: 15rem;">
				<img src="{{asset (value.photo)}}" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">{{ value.titre}}</h5>
					<p class="card-text">{{ value.description}}.</p>
					<p class="card-text">{{ value.prix}}</p>
					<a href="{{ path('post_cart', { 'id' : value.id }) }}" class="btn btn-primary">Ajouter au panier</a>
				</div>
			
		</div>

	</div>
{% endfor %}

{% endblock %}
